    "version": "0.2.0",
    "configurations": [

        {
            "name": "(lldb) Launch", 
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/svf-ex",
            "args": ["${workspaceFolder}/swap.bc"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb", // mac user's sample, if you are using the ubuntu or other system, please change to dgb 
            "preLaunchTask": "make"
        }
    ]
}